---
import "../styles/main.scss";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-HRL0YWGTWV"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-HRL0YWGTWV');
    </script>
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Cosmic Frontier Labs is building a new class of scientific tools to accelerate discovery and exploration of the Universe through abundant space telescopes." />
    <meta name="theme-color" content="#1a1a1f" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Cosmic Frontier Labs" />
    <meta property="og:description" content="Building a new class of scientific tools to accelerate discovery and exploration of the Universe." />
    <meta property="og:image" content="https://cosmicfrontierlabs.com/og-image.jpg" />
    <meta property="og:url" content="https://cosmicfrontierlabs.com" />
    <meta property="og:site_name" content="Cosmic Frontier Labs" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Cosmic Frontier Labs" />
    <meta name="twitter:description" content="Building a new class of scientific tools to accelerate discovery and exploration of the Universe." />
    <meta name="twitter:image" content="https://cosmicfrontierlabs.com/og-image.jpg" />

    <title>Cosmic Frontier Labs</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Nata+Sans:wght@100..900&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
  </head>
  <body>
    <script is:inline>
      // Stop animations on resize
      // https://css-tricks.com/stop-animations-during-window-resizing/
      let resizeTimer;
      window.addEventListener("resize", () => {
        document.body.classList.add("resize-animation-stopper");
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(() => {
          document.body.classList.remove("resize-animation-stopper");
        }, 400);
      });
    </script>
    <Header />
    <main id="content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
